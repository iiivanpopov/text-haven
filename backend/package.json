{
  "name": "texthaven-api",
  "version": "1.0.0",
  "description": "TextHaven API",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development bun run --watch ./src/index.ts | pino-pretty",
    "start": "NODE_ENV=production bun ./dist/index.js",
    "prisma:migrate": "bunx prisma migrate deploy",
    "prisma:migrate:start": "bun run prisma:migrate && bun run start",
    "build": "rm -rf ./dist && bun build --entrypoints ./src/index.ts ./src/app/lib/worker.ts --outdir ./dist --minify --target bun",
    "build:dev": "bun build --entrypoints ./src/index.ts ./src/worker.ts --outdir ./dist --minify --sourcemap=inline --target bun"
  },
  "devDependencies": {
    "@types/bun": "^1.2.14",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pino": "^7.0.5",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.7.0",
    "pino-http": "^10.4.0",
    "prisma": "^6.8.2"
  },
  "license": "MIT"
}
